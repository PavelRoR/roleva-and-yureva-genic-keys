#footer
	width 100%
	padding 36px 0 40px
	background-color: #010726
	text-align: center
	h5
		font-size: 24px;
		color: rgb(255, 252, 252);
		line-height: 1.042;
		margin 0
		font-family: 'OpenSansSemibold', sans-serif
	p
	#conditions
		font-size: 14px;
		color: rgba(254, 254, 254, 0.302);
		line-height: 1.786;
	#conditions
		margin 15px 0 0
		text-decoration: underline
.soc_buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 20px 13px
		position relative
		z-index: 1
		border-radius: 50px
		width: 32px;
		height 32px
		background-color: #f43758
		.fa
			width: 32px;
			height: 32px;
			color #fff
			font-size 18px
			line-height 32px
			position relative
			z-index 9
		&:hover
			background-color: #0e3f66
.recs_modal-content
	background-color: #ff395a
.modal_title
	text-align: left
	font-size: 26px;
	font-family: "OpenSansCondensedBold", sans-serif;
	color: #fefefe;
	line-height: 1;
	margin: 20px 0 15px;
	letter-spacing: -0.3px;
.modal_body_list
	li
		list-style none
		font-size: 18px
		color: #fff;
		line-height: 1.3;
		margin-bottom: 10px;
		padding-left: 15px;
		position: relative;
		&:before
			content: '';
			display: block;
			width: 7px;
			height: 7px;
			background-color: transparent;
			-webkit-border-radius: 50px;
			border-radius: 50px;
			border: 2px solid #fff;
			position: absolute;
			top: 10px;
			left: -2px;
		&:last-child
			margin-bottom: 0
button.close
	position absolute
	width: 35px
	height 35px
	border-radius: 50px
	line-height: 35px
	text-align: center
	font-size: 30px
	color: #000
	background-color: #F0F0F0
	top 15px
	right 15px
	left auto
	z-index 99