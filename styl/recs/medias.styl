		width 1400px
	.contacts a .fa
	.contacts a .fa+span
	.pre
	.video_tabs_buttons li
		font-size: 20px
	.main_title
		font-size: 50px
	.main_authors
	.button
	.video_tabs_day_title
		font-size: 24px
	.main_date
		margin-top: 60px
	.pre
		margin-bottom: 45px
	#description
		padding 50px 0
	.desription_text
		font-size: 24px
		max-width 1050px
	#hg_card
	#prices
	#videos
		padding 90px 0
	#hg_card_img
		margin-bottom: 60px
	#modules
		padding: 90px 0 60px
	.modules_pre
		font-size: 26px
		max-width 960px
	.module_container_title
	.price
	.buy_recs
	#footer h5
		font-size: 26px
	.module_container_text
	.price_body_list li
	.modal_body_list li
