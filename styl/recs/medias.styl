@media screen and (max-width 1199px)
	.contacts a .fa
		margin 0 8px 0 16px
@media screen and (max-width 991px)
	#header
		padding: 20px 0
		margin-bottom: 10px
	#logo
		float: none
		display: inline-block
		margin-bottom: 10px
	.contacts
		float: none
		text-align: left
	#hg_card
	#prices
	#videos
		padding 40px 0
	#modules
		padding-top: 40px 
	.module_img_1
		width: 220px
	.module_img_2
		width: 246px
		margin-right: 21px;
	.module_img_3
		width: 233px
	.module_3
		padding-bottom: 40px
	.videos_general_title
	.feedback_general_title
		margin-bottom: 40px
	#footer
		padding: 20px 0
	#footer h5
		margin-bottom: 20px
	.soc_buttons a
		margin 0 13px 15px
@media screen and (max-width 767px)
	#main
		text-align: center
		background-position: center left
	#header
		margin-bottom: 10px
	#logo
		display block
		margin  0 auto 10px
	.contacts
		text-align: center
		a
			display: inline-block
	.button_main
		margin-left: auto
	.module
		display block
	.module_img
		float: none
		margin 0 auto 25px
		display block
	.module_container
		float none
		display block
		max-width: 560px
		margin 0 auto
		text-align: center
	.price_container
		margin-bottom: 25px
	.timer h4
		margin-top: 15px
	.price_body
		min-height 1px
	#vk
		margin-bottom: 25px
	.module_1
	.module_2
	.module_3
		padding 40px 0