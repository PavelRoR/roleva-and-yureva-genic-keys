#modules
	padding: 60px 0 0
	.container
		position relative
.modules_pre
	text-align: center
	font-size: 24px
	width 100%
	max-width 860px
	margin 0 auto 40px
	font-family: 'OpenSansCondensedBold',  sans-serif
.modules_general_title
	margin-bottom: 20px
	small
		display block
		color #f43758
		font-size: 70%
		text-transform: none
.module
	display: table
.module_1
	padding 60px 0
.module_img
	float left
.module_container
	width 100%
	display: table-cell
	vertical-align: middle
.module_container_title
	font-size: 24px;
	font-family: "OpenSansCondensedBold", sans-serif;
	color: #010726
	line-height: 1.3
	margin-bottom: 34px
	span
		color: rgb(244, 55, 88);
		text-transform: uppercase
.module_container_text 
	color: rgb(1, 7, 38);
	line-height: 1.375;
	font-size: 18px
.module_2
	padding 60px 0
	position relative
	&:before
	&:after
		content ''
		width: 100%
		height 1px
		background-image url(../img/divider_white.png)
		display block
		left 0
		right 0
		position: absolute
	&:before
		top 0
	&:after
		bottom: 0
.module_3
	padding 60px 0
.module_img_1
	margin-left: 18px;
	margin-right: 50px
.module_img_2
	margin-left: 20px;
	margin-right: 6px
.module_img_3
	margin-left: 6px;
	margin-right: 49px