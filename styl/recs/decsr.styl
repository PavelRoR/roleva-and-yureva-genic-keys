#description
	padding 25px 0
	background-color: #ff395a
.desription_text
	width 100%
	max-width 860px
	text-align: center
	font-size: 20px
	line-height: 1.4
	color #fff
	margin: 0 auto 20px
	&:last-child
		margin-bottom: 0
#hg_card
	padding 60px 0
	background-color: #04051B
	background-image url(../img/after_bg.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
#hg_card_img
	display block
	margin 0 auto 30px
	border-radius: 50%
	box-shadow: 0 0 7px rgba(#fff, .5)
	width 100%
	max-width 529px