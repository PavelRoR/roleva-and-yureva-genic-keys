#prices
	padding 60px 0
	width 100%
	background-color: #000618
	background-image url(../img/authors_bg.jpg)
	background-repeat no-repeat
	background-position: center top
	background-size: cover
	overflow hidden
.prices_wrapper
	width 100%
	max-width 700px
	margin 0 auto
.price_container
	width 100%
	max-width 320px
	margin 0 auto
	border-radius: 10px
	background-color: #F5F3F3
	border: 1px solid #aaa
.price_head
	text-align: center
	padding 20px
.price_head_title 
	font-size: 28px
	font-family: 'OpenSansCondensedBold', sans-serif
	small
		display block
		font-size: 70%
		font-family: 'OpenSansLight', sans-serif
.price_body
	padding 20px
	border-top 1px solid #aaa
	border-bottom 1px solid #aaa
	min-height 205px
.price_body_list
	li
		list-style none
		color: #010726;
		line-height: 1.3;
		margin-bottom: 10px;
		padding-left: 15px;
		position: relative;
		&:before
			content: '';
			display: block;
			width: 7px;
			height: 7px;
			background-color: transparent;
			-webkit-border-radius: 50px;
			border-radius: 50px;
			border: 2px solid #ff0f47;
			position: absolute;
			top: 7px;
			left: -2px;
		&:last-child
			margin-bottom: 0
.price_body_more
	font-size: 14px
	font-family: 'OpenSansLight', sans-serif
	width 75px
	margin 0 auto 15px 15px
	color #aaa
	border-bottom: 2px dashed 
	cursor pointer
.price_footer
	padding 20px
	text-align: center
.price
	font-size: 22px
	font-family: 'OpenSansBold', sans-serif
	margin-bottom: 15px
	span
		display block
.price_full
	span
		text-decoration: line-through
.price_sale
	color red
.price_today
	color green
.price_footer_button
	margin-top: 30px
	width: 100%
	animation: pulse
	animation-fill-mode: both;
	animation-duration: 3s;
	animation-timing-function: ease-in-out;
	animation-iteration-count: infinite;
.price_footer_button_2
	animation-delay: 1s
@keyframes pulse
	0%
		transform: scale(1)
	50%
		transform: scale(1.05)
	100%
		transform: scale(1)
.timer
	h4
		font-size: 26px
		text-align: center
		color #ffffff
		margin: 40px 0 20px
		font-family: 'OpenSansBold',sans-serif
.alert-danger
	color: #a94442;
	background-color: #f2dede;
	padding: 10px;
	width 100%
	max-width 360px
	margin 40px auto 0
	border: 1px solid #ebccd1;
	border-radius: 4px;
	font-size: 24px;
	text-align: center
.flip-clock-wrapper
	width: 100%
	max-width 460px
.flip-clock-divider .flip-clock-label
	color #fff
.flip-clock-dot
	background-color: #ff0f47
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #ff0f47
	text-shadow: 2px 2px 2px rgba(0,0,0,.6);