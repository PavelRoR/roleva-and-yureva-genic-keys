#reveiws
    width 100%
    padding 96px 0 100px
    background-image url(../img/revs_bg.png)
    background-repeat no-repeat
    background-position: center bottom
    background-size: cover
.reveiws_general_title
    margin-bottom: 69px
#revs_container
    width 100%
    max-width 742px
    margin 0 auto 50px
.revs_container_link
    padding: 20px
    background-color #fff
    display: block
    border-radius: 10px
    border: 1px dashed rgba(#061e31, .2)
    img
        width 100%
        height auto
        display block
        min-height 154px
.owl-theme .owl-nav.disabled + .owl-dots
    margin-top: 21px
.owl-theme .owl-dots .owl-dot span
    width: 12px
    height 12px
    background-color: transparent
    border 2px solid #ff395a
.owl-theme .owl-dots .owl-dot.active span, .owl-theme .owl-dots .owl-dot:hover span
    background-color: #ff395a
.last_title
    font-size: 22px;
    font-family: "OpenSansCondensedBold",sans-serif;
    color: rgb(1, 7, 38);
    text-transform: uppercase;
    line-height: 1.1;
    text-align: center;
    margin 0
    span
        color #ff395a
    & + p
        font-size: 17px;
        color: rgb(1, 7, 38);
        line-height: 1.405;
        text-align: center;
        margin 10px 0 37px