#footer
    width 100%
    padding 36px 0 40px
    background-color: #010726
    text-align: center
    p
    a
        font-size: 14px;
        font-family: "OpenSansLight", sans-serif;
        color: rgba(254, 254, 254, 0.302);
        line-height: 1.2
.mail_modal-content
    background-color: #ff395a
.form_modal
    margin-bottom: 25px
    h4
        text-align: center
        font-size: 26px;
        font-family: "OpenSansCondensedBold", sans-serif;
        color: #fefefe;
        line-height: 1;
        margin: 20px 0 15px;
        letter-spacing: -0.3px;
        &+p
            font-size: 22px;
            color: #fff;
            line-height: 1.3;
            text-align: center;
            margin-bottom: 20px
button.close
    position absolute
    width: 35px
    height 35px
    border-radius: 50px
    line-height: 35px
    text-align: center
    font-size: 30px
    color: #000
    top 15px
    right 15px
    left auto
    z-index 99
